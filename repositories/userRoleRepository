const userRole = require("../models/userRole");

//create role
const createRole = (roleData) =>user.create(roleData);
// get all roles
const getAllRoles = () => userRole.find();
// get role by name 
const getUserRoleByName = (roleName) => userRole.findOne({roleName});
//get user role by id
const getUserRoleById = (id) => userRole.findById(id);
//update role
const updateRole = (id, roleData) => {
    return user.update(id, roleData);
}
//delete role
const deleteRole = (id) => userRole.findByIdAndDelete(id);

module.exports = {
    createRole,
    getAllRoles,
    getUserRoleByName,
    getUserRoleById,
    updateRole,
    deleteRole
};